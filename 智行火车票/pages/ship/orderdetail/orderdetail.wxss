@import "../../../__wuBaseWxss__/1.wxss";

.t_r {
    position: relative;
    text-align: right;
}

.order-info {
    font-size: 42rpx;
    line-height: 60rpx;
    padding: 40rpx 30rpx 10rpx;
    color: #FFF;
}

.price {
    width: 12rpx;
    height: 12rpx;
    border-top: 4rpx solid #F3F3F3;
    border-right: 4rpx solid #F3F3F3;
    transform: rotate(45deg);
    position: absolute;
    right: 20rpx;
    top: 50%;
    margin-top: -8rpx;
}

.small {
    font-size: 30rpx;
}

.refund-desc {
    font-size: 26rpx;
    color: rgba(15,15,15,0.6);
    padding-right: 48rpx;
    line-height: 48rpx;
}

.order-optional {
    background: #fff8de;
    padding: 20rpx 30rpx;
    font-size: 26rpx;
    color: #111111;
}

.businfo,.order-btn,.ticket-pick,.other-info {
    background-color: #FFF;
    padding: 30rpx 40rpx;
    margin-bottom: 20rpx;
}

.payinfo {
    background-color: #FFF;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    margin-bottom: 20rpx;
}

.ticket-pick {
    margin-bottom: 0;
}

.businfo view,.ticket-pick view,.other-info {
    line-height: 56rpx;
    font-size: 32rpx;
    margin-top: 10rpx;
}

.other-info {
    margin-top: 0;
    border-top: 2rpx solid #F3F3F3;
}

.businfo .info-title,.ticket-pick .ticket-title {
    font-size: 42rpx;
    font-weight: 400;
}

.ticket-pick text,.other-title {
    display: inline-block;
    width: 160rpx;
    color: #999;
}

.other-address {
    display: inline-block;
    width: 700rpx;
    color: #999;
}

.other-RuleDesc {
    display: inline-block;
    width: 400rpx;
    color: #999;
}

.other-auto {
    display: inline-block;
    color: #999;
}

.clock {
    line-height: 20rpx;
    margin-right: 24rpx;
}

.icon-info,.icon-time,.icon-depart,.icon-dest {
    width: 60rpx;
    -webkit-text-stroke-width: 0.8rpx;
}

.bus-order-qrcode {
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}

.bus-order-qrcode .code {
    width: 80%;
    text-align: center;
    border-bottom: 1px solid #F3F3F3;
}

.bus-order-qrcode text {
    margin: -20rpx 0 20rpx;
    display: block;
    text-align: center;
    width: 100%;
    color: #333;
}

.bus-order-qrcode image {
    width: 100%;
}

.txt {
    color: #999;
}

.qrcode-float {
    position: fixed;
    top: 0;
    bottom: 0;
    width: 100%;
    z-index: 99;
    background-color: #FFF;
}

.qr-content {
    position: absolute;
    width: 100%;
    text-align: center;
    top: 50%;
    -webkt-transform: translate(0,-50%);
    transform: translate(0,-50%);
}

.qr-content image {
    width: 100%;
}

.btuagain {
    width: 330rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin-top: 14rpx;
    font-size: 30rpx;
}

.icon-center {
    align-items: center;
}

.biggo {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    width: 180rpx;
    height: 4rpx;
}

.writecolor {
    background-color: #111111;
}