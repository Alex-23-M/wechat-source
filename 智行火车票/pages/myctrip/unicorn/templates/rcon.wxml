<template name="rcon">
    <view class="order-rcon train">
        <view class="order-price {{!item.isValid?'order-cancel':'order-valid'}}">
            <text class="price-yen">¥</text>
            <text class="price-num">{{item.orderTotalPrice}}</text>
        </view>
        <view class="order-status {{!item.isValid?'order-cancel':'order-valid'}}">{{item.statusName}}</view>
    </view>
</template>
