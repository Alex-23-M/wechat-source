<template name="shiprcon">
    <view class="order-rcon">
        <view class="order-price {{item.isCancel?'order-cancel':''}}">
            <text class="price-yen">¥</text>
            <text class="price-num">{{item['OrderTotalPrice']}}</text>
        </view>
        <view class="order-status {{item.isCancel?'order-cancel':''}}">{{item['OrderStatusName']}}</view>
    </view>
</template>
