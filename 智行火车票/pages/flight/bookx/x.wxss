    border-width: 0 0 1px;
    margin-left: 30rpx;
    padding: 30rpx 30rpx 30rpx 0;
    overflow: hidden;
    height: 150rpx;
    box-sizing: border-box;
}

.flight_seat_item:last-child {
    border: 0;
}

.flight_seat_info {
    font-size: 32rpx;
}

.flight_seat_tit {
    line-height: 44rpx;
}

.flight_seat_txt {
    line-height: 36rpx;
}

.flt_changwei {
