    line-height: 60rpx;
}

.spt_arr {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -73rpx;
    width: 146rpx;
    height: 1px;
    background: #ccc;
}

.spt_arr::after {
    content: '';
    position: absolute;
