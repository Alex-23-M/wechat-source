.airline_info {
    position: relative;
    padding-top: 15rpx;
    color: #999;
    line-height: 1;
    font-size: 28rpx;
}

.airline_logo {
    margin-right: 8rpx;
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    margin-top: -2px;
}

.airline_arr {
    width: 24rpx;
    height: 2rpx;
    background: #ccc;
    display: inline-block;
    vertical-align: middle;
    margin: -2px 20rpx 0 20rpx;
    position: relative;
}

.airline_arr::after {
    width: 12rpx;
    height: 12rpx;
    border-left: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    position: absolute;
    content: "";
    transform: rotate(45deg);
    -webkit-transform: rotate(-135deg);
    transform: rotate(-135deg);
    right: 0;
    top: 50%;
    margin-top: -7rpx;
}

.airline_share {
    margin-right: 20rpx;
    padding-bottom: 5rpx;
}

.flt_modify_info {
    color: #fff;
    margin-top: 20rpx;
    font-size: 24rpx;
}

.flt_modify_info text {
    padding: 0 20rpx;
    border-right: 1rpx solid rgba(255,255,255,.5);
}

.flt_modify_info text:first-child {
    padding-left: 0;
}

.flt_modify_info text:last-child {
    border-right: 0;
}

.flight_tab {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    color: #333;
    position: relative;
    width: 100%;
    margin-top: 20rpx;
    border-style: solid;
    border-image: url(data:image/gif;base64,R0lGODlhBQAFAPABANra2v///yH5BAUHAAEALAAAAAAFAAUAAAIHhB9pGatnCgA7) 2 stretch;
    border-width: 0 0 1px;
}

.flight_tab_list {
    flex: 1;
    text-align: center;
    background: #fff;
    font-size: 36rpx;
}

.scrollbar {
    position: absolute;
    left: 0;
    height: 8rpx;
    bottom: -1px;
    background: #5495e6;
    transition: transform .3s ease-in-out;
    transition: transform .3s ease-in-out,-webkit-transform .3s ease-in-out;
    z-index: -1;
}

.tabnum2 {
    width: 50%;
}

.flight_tab_list.flight_tab-active~.scrollbar {
    z-index: 2;
}

.flight_tab_list:nth-of-type(1).flight_tab-active~.scrollbar {
    transform: translate3d(0,0,0);
}

.flight_tab_list:nth-of-type(2).flight_tab-active~.scrollbar {
    transform: translate3d(100%,0,0);
}

.fltlist_end {
    padding: 30rpx 0 120rpx;
    text-align: center;
    font-size: 26rpx;
    color: #999;
}

.fltlist_end::after {
    width: 10rpx;
    height: 10rpx;
    border-left: 2px solid #ccc;
    border-bottom: 2px solid #ccc;
    display: inline-block;
    vertical-align: middle;
    content: "";
    transform: rotate(-45deg);
    margin: -12rpx 0 0 10rpx;
}

.flight_seat_list {
    background: #fff;
}

.flight_seat_item {
    position: relative;
    border-style: solid;
