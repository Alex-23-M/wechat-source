.flight_seat_detail {
    font-size: 24rpx;
}

.flight_seat_detail::after {
    width: 12rpx;
    height: 12rpx;
    border-left: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    display: inline-block;
    vertical-align: middle;
    content: "";
    transform: rotate(-45deg);
    margin: -12rpx 0 0 10rpx;
}

.flight_seat_item_s {
    position: relative;
    border-style: solid;
