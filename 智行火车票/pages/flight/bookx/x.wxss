.tip-txt {
    background: rgba(0,0,0,0.85);
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 999;
    padding: 40rpx 50rpx;
    overflow-y: auto;
    color: #dbdbdb;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
}

.tip-txt.active {
    opacity: 1;
}

.tip-txt .txt-blue {
    margin-top: 30rpx;
    color: #5495e6;
    font-weight: bold;
    padding: 0.5em 0;
}

.tip-txt .p {
    padding: 0.5em 0;
}

.tip-txt .s {
    font-size: 28rpx;
}

