.refund_box {
    margin-bottom: 150rpx;
}

.refund_white {
    margin: 25rpx 20rpx 0;
    background: #fff;
    border-radius: 8rpx;
    overflow: hidden;
}

.refund_tick {
    border-bottom: 1px dashed #ddd;
    padding: 25rpx;
}

.refund_tick_hd {
    width: 100%;
    clear: both;
    overflow: hidden;
}

.refund_tick .airport {
    display: inline-block;
    font-size: 34rpx;
    margin-bottom: 15rpx;
}

.refund_tick .separator {
    position: relative;
    margin: 0 25rpx;
    width: 45rpx;
    height: 4rpx;
    background: #ccc;
    display: inline-block;
    vertical-align: middle;
}

.refund_tick .separator::after {
    content: "";
    position: absolute;
    right: 0;
    bottom: 0;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 10rpx 10rpx 10rpx 0;
    border-color: transparent transparent #ccc;
}

.refund_tick_right {
    float: right;
    color: #24bc53;
    font-size: 30rpx;
}

.refund_tick_right .info_circle {
    margin: -4rpx 15rpx 0 0;
}

.refund_tick_info {
    font-size: 30rpx;
    color: #999;
    line-height: 45rpx;
}

.refund_list {
    margin: 10rpx 0;
}

.refund_list_item {
    margin-left: 113rpx;
    padding-right: 35rpx;
    line-height: 100rpx;
    border-style: solid;
    border-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAUAAAAFCAYAAACNbyblAAAALUlEQVQImWN88ODBfwY0wMLAwMAgLy/PCBN4+PDhfyZ0VQwMDAxYBVlgWpAFAbVJC08j6LRdAAAAAElFTkSuQmCC) 2 stretch;
    border-width: 0;
    border-bottom-width: 1rpx;
    position: relative;
    font-size: 30rx;
}

.refund_list_item:last-child {
    border-bottom: 0;
}

.refund_list_item .icon_checkbox {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    left: -80rpx;
    top: 50%;
    margin-top: -22rpx;
    border: 1px solid #ccc;
    border-radius: 8rpx;
    box-sizing: border-box;
}

.refund_list_item.current .icon_checkbox {
    background: #24bc53;
    border-color: #24bc53;
}

.refund_list_item.current .icon_checkbox::after {
    width: 24rpx;
    height: 12rpx;
    border-left: 2px solid #fff;
    border-bottom: 2px solid #fff;
    position: absolute;
    content: "";
    transform: rotate(-45deg);
    left: 8rpx;
    top: 8rpx;
}

.refund_list_item.disabled .icon_checkbox {
    background: #ccc;
}

.refund_list_item.disabled .icon_checkbox::after {
    width: 24rpx;
    height: 12rpx;
    border-left: 2px solid #fff;
    border-bottom: 2px solid #fff;
    position: absolute;
    content: "";
    transform: rotate(-45deg);
    left: 8rpx;
    top: 8rpx;
}

.refund_list_item .state {
    float: right;
    color: #5495e6;
}

.refund_title {
    font-size: 34rpx;
    color: #666;
    margin: 30rpx 25rpx 0;
}

.phone_add {
    position: relative;
    padding: 0 30rpx 0 180rpx;
}

.phone_add text {
    position: absolute;
    left: 30rpx;
    top: 0;
    line-height: 104rpx;
}

.book_input {
    height: 104rpx;
    width: 100%;
}

.phone_tips {
    margin: 20rpx 30rpx 10rpx;
    font-size: 26rpx;
}

.phone_tips .info_circle {
    margin: -4rpx 15rpx 0 0;
}

.refund_rule {
    margin: 30rpx 35rpx 10rpx 40rpx;
}

.refund_rule_item {
    padding-left: 35rpx;
    margin: 20rpx 0;
    position: relative;
    line-height: 44rpx;
    font-size: 28rpx;
}

.refund_rule_item::before {
    width: 6rpx;
    height: 30rpx;
    background: #5495e6;
    position: absolute;
    content: "";
    left: 0;
    top: 7rpx;
}

.refund_rule_item text {
    color: #5495e6;
}

.refund_rule_tips {
    background: #fefad7;
    padding: 20rpx 30rpx;
    font-size: 28rpx;
    color: #666;
}

.pay_box {
    height: 124rpx;
    left: 0;
    bottom: 0;
    right: 0;
    position: fixed;
    z-index: 960;
    background: rgba(255,255,255,.95);
    border-style: solid;
    border-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAUAAAAFCAYAAACNbyblAAAALUlEQVQImWN88ODBfwY0wMLAwMAgLy/PCBN4+PDhfyZ0VQwMDAxYBVlgWpAFAbVJC08j6LRdAAAAAElFTkSuQmCC) 2 stretch;
    border-width: 0;
    border-top-width: 1rpx;
    padding: 0 40rpx;
    line-height: 124rpx;
    font-size: 34rpx;
    color: #666;
}

.pay_price {
    font-size: 40rpx;
    color: #fe6b5b;
    font-weight: 800;
}

.pay_price::before {
    content: "\00A5";
    font-size: 24rpx;
    padding-right: 7rpx;
    color: #fe6b5b;
}

.pay_closed::after,.pay_open::after {
    width: 16rpx;
    height: 16rpx;
    border-left: 2px solid #fe6b5b;
    border-bottom: 2px solid #fe6b5b;
    display: inline-block;
    vertical-align: middle;
    content: "";
}

.pay_closed::after {
    transform: rotate(-45deg);
    margin: -15rpx 0 0 25rpx;
}

.pay_open::after {
    transform: rotate(135deg);
    margin: 0 0 0 25rpx;
}

.btn_pay {
    width: 250rpx;
    height: 78rpx;
    position: absolute;
    top: 23rpx;
    right: 40rpx;
    line-height: 78rpx;
    padding: 0;
    background: #5495e6;
    color: #fff;
}

.btn_pay::after {
    border: 0;
}

.btn_pay_hover::before {
    position: absolute;
    content: "";
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-color: rgba(0,0,0,.1);
}

.mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,.8);
    z-index: 1000;
}

.pop_price {
    height: 100%;
    width: 100%;
    display: table;
}

.pop_price_list {
    vertical-align: middle;
    display: table-cell;
    color: #fff;
    padding: 0 35rpx;
}

.pop_price_total {
    font-size: 36rpx;
    line-height: 50rpx;
}

.pop_price_total .flt_price {
    float: right;
}

.pop_price_tit {
    color: #5495e6;
    font-size: 32rpx;
    margin: 30rpx 0 15rpx;
}

.pop_price_item {
    line-height: 65rpx;
}

.pop_price_item .price {
    float: right;
    font-size: 32rpx;
}