.qpcg-bg {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}

.qpcg-bg image {
    width: 100%;
    height: 100%;
}

.btn-share {
    position: fixed;
    height: 100rpx;
    line-height: 100rpx;
    z-index: 100;
    left: 100rpx;
    right: 100rpx;
    bottom: 30%;
    border-radius: 100rpx;
    color: #fff;
    font-size: 36rpx;
}

.btn-share::after {
    border: 0;
}

.btn-share.ty {
    background: #fc6e51;
    box-shadow: 0 6rpx 0 #ed5545;
}

.btn-share.zx {
    background: #5495e6;
    box-shadow: 0 6rpx 0 #487cc3;
}

.btn-share_hover::after {
    background: rgba(0,0,0,.1);
}