@import "../common/components/toast/toast.wxss";

.index {
    background: #fff;
    padding: 20rpx 30rpx 40rpx 30rpx;
}

.selform {
    background: #fff;
    border-style: solid;
    border-image: url(data:image/gif;base64,R0lGODlhBQAFAPABANra2v///yH5BAUHAAEALAAAAAAFAAUAAAIHhB9pGatnCgA7) 2 stretch;
    border-width: 0 0 1px 0;
}

.selform .item {
    height: 110rpx;
    line-height: 110rpx;
}

.selform .item .cell {
    border-style: solid;
    border-image: url(data:image/gif;base64,R0lGODlhBQAFAPABANra2v///yH5BAUHAAEALAAAAAAFAAUAAAIHhB9pGatnCgA7) 2 stretch;
    border-width: 0 0 1px 0;
    height: 108rpx;
    padding: 0 10rpx;
    position: absolute;
    top: 0px;
}

.type {
    font-size: 44rpx;
    position: relative;
    left: 0px;
    right: 0px;
    overflow: hidden;
}

.type train {
    width: 38%;
    transition: all 0.5s ease-out;
}

.type flight {
    text-align: right;
    right: 0px;
}

.type--train {
    color: #222;
    font-size: 30rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.type--train .train-checkbox-wrap {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.type--train .train-checkbox {
    margin-left: 20rpx;
}

.train-checkbox {
    font-size: 26rpx;
    padding-left: 44rpx;
    position: relative;
}

.train-checkbox::after {
    width: 32rpx;
    height: 32rpx;
    background: url(https://images3.c-ctrip.com/train/wechat/icons/checkbox.png) no-repeat center bottom;
    background-size: 32rpx;
    position: absolute;
    content: "";
    left: 0;
    top: 52%;
    margin-top: -18rpx;
}

.ty .train-checkbox.current:after {
    background: url(https://images3.c-ctrip.com/train/wechat/icons/checkbox-checked-ty.png) no-repeat center bottom;
    background-size: 32rpx;
}

.zx .train-checkbox.current:after {
    background: url(https://images3.c-ctrip.com/train/wechat/icons/checkbox-checked-zx.png) no-repeat center bottom;
    background-size: 32rpx;
}

.station {
    font-size: 44rpx;
    position: relative;
    overflow: hidden;
}

.station .from,.station .to {
    width: 38%;
    transition: all 0.5s ease-out;
}

.station .to {
    text-align: right;
    right: 0px;
}

.station .from.exchange {
    transform: translate3d(142.5%,0,0);
    text-align: right;
}

.to.exchange {
    transform: translate3d(-142.5%,0,0);
    text-align: left;
}

.switch {
    width: 14%;
    height: 110rpx;
    position: absolute;
    top: 0;
    left: 43%;
    transition: all .3s ease;
}

.icon-change {
    width: 30px;
    height: 30px;
    position: absolute;
    left: 50%;
    top: 50%;
    margin: -15px 0 0 -15px;
}

.icon-change::after {
    width: 30px;
    height: 30px;
    background: url(//pic.c-ctrip.com/train/h5/train/train-index-weixin.png) no-repeat;
    background-size: 130px auto;
    background-position: -98px 2px;
    left: 50%;
    top: 50%;
    margin: -15px 0 0 -15px;
    position: absolute;
    content: "";
}

.time {
    font-size: 44rpx;
    position: relative;
}

.time::after {
    width: 16rpx;
    height: 16rpx;
    border-top: 1px solid #ccc;
    border-right: 1px solid #ccc;
    transform: rotate(45deg);
    position: absolute;
    content: "";
    right: 16rpx;
    top: 50%;
    margin-top: -8rpx;
}

.time .cell {
    left: 0;
    right: 0;
}

.time .dayinfo {
    float: right;
    font-size: 30rpx;
    color: #999;
    margin-right: 30rpx;
}

.type {
    color: #666;
    font-size: 18px;
    position: relative;
    padding: 0 5px;
}

.type switch {
    position: absolute;
    right: 5px;
    top: 50%;
    margin-top: -28px;
}

.notice {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 2.25rem;
    background: #FFF5DA;
    line-height: 2.25rem;
    color: #9C7F52;
    font-size: 14px;
    padding: 0 2.5rem;
}

.notice::before {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    content: "";
    background: url(//pic.c-ctrip.com/train/h5/train/train-index-weixin.png) no-repeat;
    background-size: 260rpx auto;
    background-position: -200rpx -60rpx;
    left: 24rpx;
    top: 50%;
    margin-top: -20rpx;
}

.notice::after {
    width: 16rpx;
    height: 16rpx;
    border-top: 1px solid #EDDDBB;
    border-right: 1px solid #EDDDBB;
    transform: rotate(45deg);
    position: absolute;
    content: "";
    right: 40rpx;
    top: 50%;
    margin-top: -8rpx;
}

.tip-txt {
    background: rgba(0,0,0,0.85);
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 999;
    padding: 40rpx 50rpx;
    overflow-y: auto;
    color: #dbdbdb;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
}

.tip-txt.active {
    opacity: 1;
}

.tip-txt .cblue {
    margin-top: 30rpx;
    color: #099fde;
    font-weight: bold;
    padding: 0.5em 0;
}

.tip-txt .p {
    padding: 0.5em 0;
}

.tip-txt .s {
    font-size: 28rpx;
}

.index_tab {
    height: 180rpx;
    line-height: 2.5rem;
    color: #333;
    font-size: .8rem;
    position: relative;
    background: #5495e6;
    margin: -20rpx -30rpx 0;
    padding: 0 75rpx;
    text-align: center;
}

.index_tab_item {
    width: 160rpx;
    height: 135rpx;
    text-align: center;
    font-size: 40rpx;
    display: inline-block;
    margin: 45rpx 16rpx 0 24rpx;
    z-index: 10;
    position: relative;
    font-size: 26rpx;
    color: #fff;
}

.index_tab_item.train:before,.index_tab_item.flight:before {
    width: 60rpx;
    height: 60rpx;
    background: url(http://images3.c-ctrip.com/tieyou/wechat/wechat_zx.png?v=323) no-repeat;
    background-size: 400rpx 400rpx;
    content: "";
    display: block;
    margin: 22rpx auto -15rpx;
}

.index_tab_item.train.zhixing:before,.index_tab_item.flight.zhixing:before {
    width: 60rpx;
    height: 60rpx;
    background: url(http://images3.c-ctrip.com/tieyou/wechat/wechat_zx.png?v=323) no-repeat;
    background-size: 400rpx 400rpx;
    content: "";
    display: block;
    margin: 22rpx auto -15rpx;
}

.index_tab_item.train:before {
    background-position: 0 -190rpx;
}

.index_tab_item.current.train:before {
    background-position: -120rpx -190rpx;
}

.index_tab_item.flight:before {
    background-position: -60rpx -190rpx;
}

.index_tab_item.current.flight:before {
    background-position: -180rpx -190rpx;
}

.index_tab_item.bus:before {
    width: 60rpx;
    height: 60rpx;
    background: url(http://images3.c-ctrip.com/BUS/zhixing/bus-white.png) no-repeat;
    background-size: 60rpx 60rpx;
    content: "";
    display: block;
    margin: 22rpx auto -15rpx;
}

.index_tab_item.current.bus:before {
    width: 60rpx;
    height: 60rpx;
    background: url(http://images3.c-ctrip.com/BUS/zhixing/zxbus.png) no-repeat;
    background-size: 60rpx 60rpx;
    content: "";
    display: block;
    margin: 22rpx auto -15rpx;
}

.scrollbar {
    position: absolute;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    background: #fff;
    left: 50%;
    bottom: -25rpx;
    margin-left: -220rpx;
    transition: transform .3s ease-in-out;
    transition: transform .3s ease-in-out,-webkit-transform .3s ease-in-out;
    z-index: -1;
}

.index_tab_item.current {
    color: #5495e6;
}

.index_tab_item.current~.scrollbar {
    z-index: 2;
}

.index_tab_item:nth-of-type(1).current~.scrollbar {
    transform: translate3d(-56rpx,0,0);
}

.index_tab_item:nth-of-type(2).current~.scrollbar {
    transform: translate3d(145rpx,0,0);
}

.index_tab_item:nth-of-type(3).current~.scrollbar {
    transform: translate3d(340rpx,0,0);
}

.wechat-layer {
    z-index: 999;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0,0,0,.5);
}

.wechat-layer-imgBox {
    width: 100%;
    float: right;
}

.wechat-layer-img {
    float: right;
    width: 100rpx;
    height: 100rpx;
    margin-top: 16rpx;
    margin-right: 95rpx;
}

.wechat-layer-word {
    clear: both;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    line-height: 40rpx;
    font-weight: bold;
    padding: 0 150rpx;
}

.bstable_tab {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    color: #333;
    font-size: 32rpx;
    position: relative;
    width: 100%;
    border-style: solid;
    border-width: 0 0 1px 0;
    border-image: url(data:image/gif;base64,R0lGODlhBQAFAPABANra2v///yH5BAUHAAEALAAAAAAFAAUAAAIHhB9pGatnCgA7) 2 stretch;
}

.bs_tab_item {
    flex: 1;
    text-align: center;
    background: #fff;
}

.bsscrollbar {
    position: absolute;
    width: 30%;
    height: 8rpx;
    left: 10%;
    bottom: -1px;
    background: #5495e6;
    transition: transform .3s ease-in-out;
    transition: transform .3s ease-in-out,-webkit-transform .3s ease-in-out;
    z-index: -1;
}

.bs_tab_item.current~.bsscrollbar {
    z-index: 2;
}

.bs_tab_item:nth-of-type(1).current~.bsscrollbar {
    transform: translate3d(0%,0,0);
}

.bs_tab_item:nth-of-type(2).current~.bsscrollbar {
    transform: translate3d(165%,0,0);
}

.index-kq {
    background: #fff;
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
}

.index-kq .tit {
    font-size: 28rpx;
    font-weight: 500;
}

.index-kq .tit .tgrey {
    font-size: 22rpx;
    color: #999;
    margin-left: 16rpx;
    font-weight: 400;
}

.index-kq .tit .fr {
    float: right;
    color: #5495E6;
    font-weight: 400;
}

.index-kq-bd {
    display: flex;
    margin: 36rpx -30rpx 0 0;
}

.index-kq-bd .item {
    flex: 1;
    border-style: solid;
    border-width: 0 1px 0 0;
    border-image: url(data:image/gif;base64,R0lGODlhBQAFAPABANra2v///yH5BAUHAAEALAAAAAAFAAUAAAIHhB9pGatnCgA7) 2 stretch;
    margin-right: 34rpx;
    line-height: 50rpx;
    padding-right: 30rpx;
    font-size: 28rpx;
}

.index-kq-bd .item:last-child {
    margin-right: 0;
    border-right: 0;
}

.index-kq-bd .item .fr {
    float: right;
    font-size: 24rpx;
}

.index-kq-bd .item .tblue {
    color: #5495E6;
    font-size: 34rpx;
}

.index-kq-bd .item .tred {
    color: #F15B38;
    font-size: 34rpx;
}

.index-kq-bd .item icon {
    width: 30rpx;
    height: 36rpx;
    background: url(http://images3.c-ctrip.com/zt/wechat/kq-zx.png) no-repeat;
    background-size: 100rpx 36rpx;
    margin: -4rpx 16rpx 0 0;
}

.index-kq-bd .item .icon-rocket {
    background-position: 0 0;
}

.index-kq-bd .item .icon-ticket {
    background-position: -32rpx 0;
}